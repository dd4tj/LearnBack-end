<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Home Page</title>
   </head>
   <style>
      table,
      th,
      td {
         border: 1px solid black;
         border-collapse: collapse;
      }
   </style>
   <body>
      <h1>Welcome to Home Page</h1>
      <h2><a href="/create">Add information</a></h2>
      <table style="width: 100%">
         <tr>
            <th>Email</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</th>
         </tr>

         <% for(let i = 0; i < dataTable.length; i++) {%>
         <tr>
            <td><%= dataTable[i].email %></td>
            <td><%= dataTable[i].firstName %></td>
            <td><%= dataTable[i].lastName %></td>
            <td><%= dataTable[i].address %></td>
            <td>
               <!-- <input type="button" value="Edit"> -->
               <!-- <input type="button" value="Delete"> -->
               <div class="btn-group">
                  <button><a href="/edit-user-page?id=<%= dataTable[i].id %>" type="button">Edit</a></button>
                  <form method="POST" action="/delete-user?_method=DELETE&id=<%= dataTable[i].id %>">
                     <button type="submit">Delete</button>
                  </form>
               </div>
            </td>
         </tr>
         <% } %>
      </table>
   </body>
</html>
